<h2>New campsite add</h2>

<%= form_for :campsite, url: camp_sites_path, remote: true do |f| %>
  <% if @campsite.errors.any? %>
    <% @campsite.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"> <%=msg %></div>
    <%end %>
  <%end %>
  <p>
    Name <br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>

  <p>
    Description <br>
    <%= f.text_area(:description, {:class => 'form-control'}) %>
  </p>

  <div>
    <label>Region</label>
    <%= f.collection_select :region_id, Region.all, :id, :name,{},{class: "form-select"} %>
  </div>
  <br/>

  <div>
    <label>City</label>
    <%= f.collection_select :city_id, City.all, :id, :name,{:include_blank => "Вне города"},{class: "form-select"} %>
  </div>
  <br/>

  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>