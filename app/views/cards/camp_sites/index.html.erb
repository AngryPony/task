<h1>Main info</h1>

<div class="row">
  <div class="col-md-3">
    <div class="shadow bg-body rounded p-3">
      <%= render "filters" %>
    </div>
  </div>

  <div class="col-md-9">
    <% if !@city.nil? %>
      <h3>Campsites in city: <%= @city.name %></h3>
      <br/>
    <% elsif !@region.nil? %>
      <h3>Campsites in region: <%= @region.name %></h3>
      <br/>
    <% elsif !@country.nil? %>
      <h3>Campsites in country: <%= @country.name %></h3>
      <br/>
    <% end %>
    <div class="row">
      <% @campsites.each do |campsite| %>

        <div class="col-md-4">
          <div class="card border-info mb-3">
            <div class="card-header"><h5><%=campsite.name %></h5></div>
            <div class="card-body">
              <p class="card-text"><%=campsite.description %></p>
              <a class="card-link"><%=link_to campsite.region.name,regions_path%></a>
              <%= campsite.city.nil? ? "" :
                    link_to(campsite.city.name, cards_country_region_city_camp_sites_path(campsite.city.region.country,campsite.city.region,campsite.city)) %>
              <a class="card-link">
              </a>
            </div>
          </div>
        </div>


      <% end %>
      </div>
  </div>
</div>
</div>


