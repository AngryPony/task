<h2>Edit region</h2>

<%= form_for :region, url: region_path(@region), method: :patch, remote: true do |f| %>
  <% if @region.errors.any? %>
    <% @region.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"> <%=msg %></div>
    <%end %>
  <%end %>
  <p>
    Name <br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <br>
  <div>
    <label>Страна</label>
    <%= f.collection_select :country_id, Country.all, :id, :name,{},{class: "form-select"} %>
  </div>
  <br/>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>